<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jamjam.scripture.MainActivity">

    <TextView
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:textColor="#000000"
        android:id="@+id/book"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter"
        android:textColor="#000000"
        android:id="@+id/chapter"
        android:layout_below="@+id/edittextbook"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verse"
        android:textColor="#000000"
        android:typeface="sans"
        android:id="@+id/verse"
        android:layout_below="@+id/edittextchapter"
        android:layout_centerHorizontal="true" />

    <Button
        android:textSize="80sp"
        android:textAllCaps="false"
        android:typeface="sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="#000000"
        android:id="@+id/share"
        android:onClick="buttonOnClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/edittextbook"
        android:layout_below="@+id/book"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/edittextverse"
        android:layout_below="@+id/verse"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/edittextchapter"
        android:layout_below="@+id/chapter"
        android:layout_alignLeft="@+id/edittextverse"
        android:layout_alignStart="@+id/edittextverse" />

</RelativeLayout>
